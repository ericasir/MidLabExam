import 'package:flutter/material.dart';

class Counter extends StatelessWidget { //Stateful to StatelessWidget
  const Counter({super.key}); //Parameter for all widget,
  @override
  Widget build(BuildContext context) {
    int _counter = 0; //To keep on tracking of counts such as numbers to times of loop.
    void _increment() { //Value of _counter.
    _counter++;
    }
      return GestureDetector (
      onTap: () {
        print("MyButton was tapped");
      },
      child: Container (
        height: 60,
        padding: const EdgeInsets.all(8),
        margin: const EdgeInsets.symmetric(horizontal: 8),
        decoration: BoxDecoration (
          borderRadius: BorderRadius.circular(6),
          color: Colors.blue[500],
        ),
        child: Column(
        mainAxisAlignment: MainAxisAlignment.center,
        children: [
          const SizedBox(height: 16), // Corrected the SizedBox to be a child
          Text('Count: $_counter'),
        ],
      ),
    ),
    );
  }
}
void main() {
  runApp(
    const MaterialApp(
      home: Scaffold(
        body: Center(
          child: Counter(),
        ),
      ),
    ),
  );
}
